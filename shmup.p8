-- current episode: 5

function _init()
	shipx=64
	shipy=64
	
	shipsx=0
	shipsy=0
	
	bulx=0
	buly=0
end

function _draw()
	cls(0)
	spr(1,shipx,shipy)
	spr(2,bulx,buly)
end

function _update()
	shipsx=0
	shipsy=0
	if btn(⬅️) then
		shipsx=-2
	end
	if btn(➡️) then
		shipsx=2
	end
	if btn(⬆️) then
		shipsy=-2
	end
	if btn(⬇️) then
		shipsy=2
	end
	if btnp(❎) then
		buly=shipy-3
		bulx=shipx
		sfx(0)
	end
	
	shipx=shipx+shipsx
	shipy=shipy+shipsy
	
	buly=buly-2
	
	if shipx>120 then
		shipx=0
	end
	if shipx<0 then
		shipx=120
	end
	if shipy>120 then
		shipy=0
	end
	if shipy<0 then
		shipy=120
	end
end
